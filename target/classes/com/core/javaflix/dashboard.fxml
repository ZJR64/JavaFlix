<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #748c89;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.core.javaflix.DashboardController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <BorderPane prefHeight="69.0" prefWidth="650.0">
               <right>
                  <Button fx:id="profileButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="98.0" text="Profile" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets right="50.0" />
                     </BorderPane.margin>
                  </Button>
               </right>
               <center>
                  <Button fx:id="collectoinButton" mnemonicParsing="false" onAction="#sendToCollections" prefHeight="34.0" prefWidth="166.0" text="Collections" BorderPane.alignment="CENTER" />
               </center>
               <left>
                  <Button fx:id="friendsButton" mnemonicParsing="false" onAction="#sendToFriends" prefHeight="32.0" prefWidth="105.0" text="Friends" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="50.0" />
                     </BorderPane.margin>
                  </Button>
               </left>
            </BorderPane>
         </children>
      </HBox>
   </top>
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="searchLabel" alignment="CENTER" prefHeight="18.0" prefWidth="88.0" text="Search:" textAlignment="CENTER" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="16.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="searchInput" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="510.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
   </center>
</BorderPane>
